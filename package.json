{
  "name": "@disorrder/screw",
  "description": "Light-weight library for animating stuff, inspired by Tween and animejs",
  "version": "1.2.0-rc.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "yarn build && jest",
    "prepack": "echo 'TODO: build, test'"
  },
  "devDependencies": {
    "jest": "^28.1.3",
    "standard-version": "^9.5.0",
    "ts-jest": "^28.0.7",
    "typescript": "^4.6.4",
    "vite": "^3.0.0",
    "vite-plugin-dts": "^1.4.1"
  },
  "files": [
    "dist",
    "plugins"
  ],
  "main": "./dist/screw.umd.js",
  "module": "./dist/screw.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/screw.es.js",
      "require": "./dist/screw.umd.js"
    }
  },
  "jest": {
    "verbose": true,
    "transform": {
      "^.+\\.(js|ts)$": "ts-jest"
    }
  },
  "standard-version": {
    "scripts": {
      "postbump": "yarn build",
      "precommit": "git add ."
    }
  }
}
